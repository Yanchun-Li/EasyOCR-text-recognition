# Auto detect text files and perform LF normalization
* text=auto

# JS files must always use LF for tools to work
*.js text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.ts text eol=lf
*.tsx text eol=lf

# Python files
*.py text eol=lf

# Documentation
*.md text eol=lf
*.txt text eol=lf

# Configs
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Binary files
*.png binary
*.jpg binary
*.gif binary
*.ico binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.ttf binary
*.woff binary
*.woff2 binary 